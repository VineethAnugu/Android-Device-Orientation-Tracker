<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Acceleromter Values" />

    <TextView
        android:id="@+id/Acc_X"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="X-axis :"
        tools:text="X-axis" />

    <TextView
        android:id="@+id/Acc_Y"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Y-axis :"
        tools:text="Y-axis" />

    <TextView
        android:id="@+id/Acc_Z"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Z-axis: "
        tools:text="Z-axis" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gyroscope Values" />

    <TextView
        android:id="@+id/Gyr_X"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="X-axis: "
        tools:text="X-axis" />

    <TextView
        android:id="@+id/Gyr_Y"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Y-axis"
        tools:text="Y-axis" />

    <TextView
        android:id="@+id/Gyr_Z"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Z-axis"
        tools:text="Z-axis" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Magnetometer Values" />

    <TextView
        android:id="@+id/Mag_X"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="X-axis"
        tools:text="X-axis" />

    <TextView
        android:id="@+id/Mag_Y"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Y-axis: "
        tools:text="Y-axis: " />

    <TextView
        android:id="@+id/Mag_Z"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Z-axis: "
        tools:text="Z-axis: " />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Orientation" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Final Angles" />

    <TextView
        android:id="@+id/FinalPitch"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text=" Pitch : " />

    <TextView
        android:id="@+id/FinalRoll"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Roll : " />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accelerometer Values" />

    <TextView
        android:id="@+id/AccPitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pitch: " />

    <TextView
        android:id="@+id/AccRoll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Roll: " />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gyroscope values" />

    <TextView
        android:id="@+id/GyrPitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pitch: " />

    <TextView
        android:id="@+id/GyrRoll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Roll: " />
</LinearLayout>